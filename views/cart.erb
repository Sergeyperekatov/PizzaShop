<h1 align="center">Корзина</h1>

<div>
	<table class="table table-striped">
		<thead>
	 <tr>
		<th>Наименование</th>		
		<th>Цена</th>		
		<th>Количество</th>		
	 </tr>	
	</thead>
	<tbody>
		<% total_price = 0 %>
		<% total_qty = 0 %>
		<% @items.each do |item| %>
		<tr>
			<td><%= item[0].title %></td>
			<td><%= item[0].price %></td>
			<td><%= item[1] %></td>
		</tr>
		<% total_price += item[0].price*item[1].to_i %>
		<% total_qty += item[1].to_i %>
		<% end %>
		<tr>
			<td></td>
			<td>Total: <%= total_price %></td>
			<td><%= total_qty %></td>
		</tr>



		</tbody>
	</table>
</div>

<form action="/place_order" method="POST" role="form">
 
  <input type="hidden" name="order[scope]" value="<%= @orders_input %>"/>
  
  <div class="form-group">
    <label>Ваше имя</label>
    <input name="order[name]" type="text" class="form-control" placeholder="Ваше имя">
  </div>

  <div class="form-group">
    <label>Ваш телефон</label>
    <input name="order[phone]" type="text" class="form-control" placeholder="Ваш телефон" >
  </div>

  <div class="form-group">
    <label>Укажите адрес доставки: </label>
    <input name="order[address]" type="text" class="form-control" placeholder="Укажите адрес">
  </div>

  

  

  <button type="submit" class="btn btn-primary btn-lg">Оформить заказ</button>
   <button onclick="return cancel_order()" type="submit" class="btn btn-danger btn-lg">Очистить заказ</button>

</form>

