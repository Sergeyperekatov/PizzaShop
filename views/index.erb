<h2 align="center">Welcom to Pizza world!</h2><br/>

<h3 align="center">Menu PizzaShop's</h3><br/>

<div class="row">

	<% @products.each do |product| %>

<br>
 	<div class="col-md-4">

 		<p> <img src="<%= product.path_to_image %>" height='75%' width='75%'> </p> <br> 
 		<h2><%= product.title %></h2>
 		<ul>
 		 <li type="none">Описание: <%= product.description %></li>
 		 <li type="none">Размер: <%= product.size %> см</li>
 		 <li type="none">Острота: <%= product.is_spicy %></li>
		 <li type="none">Можно в пост? <%= product.is_veg %></li>
		 <li type="none">Цена дня? <%= product.is_best_offer %></li>
 		</ul>
 		<p><strong>Цена: <%= product.price %>руб.</strong></p>
  		<button class ="btn btn-primary" onclick="something()">Add to basket</button>
		
 	</div><br>
<% end %>

</div>


