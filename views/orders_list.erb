<h2 align="center">Список заказов: </h2>

<table class="table table-striped">
    <thead>
      <tr>
        <th>Заказ</th>
        <th>Имя</th>
        <th>Номер телефона</th>
        <th>Адресс доставки</th>
      </tr>
    </thead>

    <tbody>
    <% @shipms.reverse.each do |item| %>
      <tr>
        <td><%= item[:scope] %></td>
        <td><%= item[:name] %></td>
        <td><%= item[:phone] %></td>
        <td><%= item[:address] %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
